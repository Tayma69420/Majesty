<style>
    .delete-form {
        display: inline-block;
    }
    
    .delete-btn {
        background-color: #dc3545;
        color: #fff;
        border: none;
        padding: 8px 16px;
        border-radius: 4px;
        font-size: 14px;
        cursor: pointer;
    }
    
    .delete-btn:hover {
        background-color: #c82333;
    }
</style>

<form class="delete-form" method="post" action="{{ path('app_avis_delete', {'idavis': avi.idavis}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ avi.idavis) }}">
    <button class="delete-btn">Delete</button>
</form>
