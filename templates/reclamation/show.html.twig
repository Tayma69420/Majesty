{% extends 'base.html.twig' %}

{% block title %}Réclamation{% endblock %}
   
{% block body %}
 {% include 'backandfront/Front/navbar.html.twig' %}
 <div style="margin: 60px">
<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Réclamation</h1>
            <a href="{{ path('app_reclamation_index') }}" class="btn btn-primary">Retour à la liste</a>
            </div>
    <table class="table">
        <tbody>
            <tr>
                <th>Identifiant</th>
                <td>{{ reclamation.idReclamation }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ reclamation.reclaDesc }}</td>
            </tr>
            <tr>
                <th>Date de la réclamation</th>
                <td>{{ reclamation.daterec ? reclamation.daterec|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ reclamation.titre }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ reclamation.type }}</td>
            </tr>
        </tbody>
    </table>

      



    
    <div class="mt-5">
    <a href="{{ path('app_reclamation_edit', {'idReclamation': reclamation.idReclamation}) }}" class="btn btn-outline-primary mr-2">Modifier</a>
    <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">Supprimer</button>
    </div>
    {{ include('reclamation/_delete_form.html.twig') }}
    </div>
     {% include 'backandfront/Front/footer.html.twig' %}
{% endblock %}
