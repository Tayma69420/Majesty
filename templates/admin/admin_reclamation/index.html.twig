{% extends 'base.html.twig' %}

{% block title %}Liste des Réclamations{% endblock %}

{% block body %}
{% include 'frontandback/back/NiceAdmin/navbarmod.html.twig' %}

    <h1 class="text-center">Liste des Réclamations</h1>

    <div class="container mt-4">
      <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Description</th>
                <th>Date</th>
                <th>Titre</th>
                <th>Type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reclamation in reclamations %}
            <tr>
                <td>{{ reclamation.idReclamation }}</td>
                <td>{{ reclamation.reclaDesc }}</td>
                <td>{{ reclamation.daterec ? reclamation.daterec|date('Y-m-d') : '' }}</td>
                <td>{{ reclamation.titre }}</td>
                <td>{{ reclamation.type }}</td>
                <td>
                    <a href="{{ path('app_admin_reclamation_show', {'idReclamation': reclamation.idReclamation}) }}" class="btn btn-sm btn-outline-secondary">Afficher</a>
                    
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
      </table>
    </div>
{% endblock %}