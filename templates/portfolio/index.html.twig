{% extends 'base.html.twig' %}

{% block title %}Portfolio Index{% endblock %}

{% block body %}
    

    <table style="border-collapse: collapse; width: 100%;">
        <thead style="background-color: #eee;">
            <tr>
                <th style="border: 1px solid #ccc; padding: 0.5em;">ID</th>
                <th style="border: 1px solid #ccc; padding: 0.5em;">Description</th>
                <th style="border: 1px solid #ccc; padding: 0.5em;">CV</th>
                <th style="border: 1px solid #ccc; padding: 0.5em;">Image</th>
                <th style="border: 1px solid #ccc; padding: 0.5em;">Actions</th>
            </tr>
        </thead>
        <tbody style="background-color: #eee;">
        {% for portfolio in portfolios %}
            <tr>
                <td style="border: 1px solid #ccc; padding: 0.5em;">{{ portfolio.idportfolio }}</td>
                <td style="border: 1px solid #ccc; padding: 0.5em;">{{ portfolio.description }}</td>
                <td style="border: 1px solid #ccc; padding: 0.5em;">{{ portfolio.cv }}</td>
                <td style="border: 1px solid #ccc; padding: 0.5em;"><img src="{{asset('/images/'~portfolio.image)}}" width="100" height="100" class="img"   alt="{{ portfolio.description }}" /></td>
                <td style="border: 1px solid #ccc; padding: 0.5em;">
                    
                    <a href="{{ path('app_portfolio_edit', {'idportfolio': portfolio.idportfolio}) }}" style="text-decoration: none; margin-right: 0.5em;">Edit </a>
                    <a href="{{ path('app_portfolio_delete', {'idportfolio': portfolio.idportfolio}) }}" style="text-decoration: none;">Delete</a>
                    <a href="{{ path('app_portfolio_show', {'idportfolio': portfolio.idportfolio}) }}" style="text-decoration: none; margin-right: 0.5em;">Show </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8" style="border: 1px solid #ccc; padding: 0.5em;">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_portfolio_new') }}" style="display: block; margin-top: 1em; text-align: center;">Create new</a>
{% endblock %}
