{% extends 'base.html.twig' %}

{% block title %}User Settings{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* CSS for the dashboard sidebar */
        .dashboard {
            display: flex;
            flex-direction: row;
        }
        .dashboard-menu {
            width: 200px;
            background-color: #f5f5f5;
            padding: 10px;
        }
        .dashboard-content {
            flex: 1;
            padding: 10px;
        }
        .dashboard-menu ul {
            list-style: none;
            margin: 0;
            padding: 0;
        }
        .dashboard-menu li {
            margin-bottom: 10px;
        }
        .dashboard-menu a {
            display: block;
            padding: 5px;
            color: #333;
            text-decoration: none;
        }
        .dashboard-menu a:hover {
            background-color: #ddd;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="dashboard">
        <div class="dashboard-menu">
            <ul>
                <li><a href="{{ path('user_settings') }}">Settings</a></li>
                <li><a href="#">Profile</a></li>
                <li><a href="{{ path('app_login') }}">Logout</a></li>
            </ul>
        </div>
        <div class="dashboard-content">
            <h1>User Settings</h1>
            <form action="{{ path('user_update_image') }}" method="POST" enctype="multipart/form-data">
                <h2>Update Profile Picture</h2>
                <input type="file" name="image_file">
                <br><br>
                <input type="submit" value="Update">
            </form>
            <br><br>
            <form action="{{ path('user_update_password') }}" method="POST">
                <h2>Change Password</h2>
                <label for="old_password">Old Password:</label>
                <input type="password" name="old_password" required>
                <br><br>
                <label for="new_password">New Password:</label>
                <input type="password" name="new_password" required>
                <br><br>
                <label for="confirm_new_password">Confirm New Password:</label>
                <input type="password" name="confirm_new_password" required>
                <br><br>
                <input type="submit" value="Change Password">
            </form>
        </div>
    </div>
{% endblock %}
