{% extends 'base.html.twig' %}

{% block title %}User Settings{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
    h1 {
        font-size: 36px;
        margin-top: 0;
        text-align: center;
    }

    h2 {
        font-size: 24px;
        margin-top: 40px;
    }

    form {
        margin-top: 20px;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    input[type="submit"] {
        background-color: #3C486B;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        margin-top: 20px;
    }

    input[type="submit"]:hover {
        background-color: #3C486B;
    }

    label {
        display: block;
        font-size: 18px;
        margin-bottom: 5px;
    }

    input[type="password"] {
        font-size: 16px;
        padding: 5px;
        border-radius: 5px;
        border: 1px solid #ccc;
        width: 100%;
        box-sizing: border-box;
        max-width: 300px;
    }

    message {
        font-size: 20px;
        margin-top: 0;
     margin-left: 370px;
    }

   a {
  display: block;
  text-align: center;
  margin-top: 10px;
}

</style>


    </style>
{% endblock %}

     
{% block body %}
{% include 'backandfront/Front/navbar.html.twig' %}

    
 
            <h1>User Settings</h1>


                   {% if message %}
    <message>{{ message }}</message>
    <a href="{{ path('user_enable_2fa') }}">Cliquez ici pour l'activer</a>

{% endif %}



            <form action="{{ path('user_update_image') }}" method="POST" enctype="multipart/form-data">
                <h2>Update Profile Picture</h2>
                <input type="file" name="image_file">
                <br><br>
                <input type="submit" value="Update">
            </form>
            <br><br>
            <form action="{{ path('user_update_password') }}" method="POST" novalidate>

                <h2>Change Password</h2>
                <label for="old_password">Old Password:</label>
                <input type="password" name="old_password" required>
                <br><br>
                <label for="new_password">New Password:</label>
                <input type="password" name="new_password" required>
                <br><br>
                <label for="confirm_new_password">Confirm New Password:</label>
                <input type="password" name="confirm_new_password" required>
                <br><br>
                <input type="submit" value="Change Password">
            </form>
        </div>
    </div>

   {% include 'backandfront/Front/footer.html.twig' %}


{% endblock %}
