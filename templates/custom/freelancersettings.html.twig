{% extends 'base.html.twig' %}

{% block title %}User Settings{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
  /* CSS for the dashboard sidebar */
.dashboard {
  display: flex;
  flex-direction: row;
  background-color: #f5f5f5;
  font-family: Arial, sans-serif;
}

.dashboard-menu {
  width: 200px;
  padding: 10px;
  border-right: 1px solid #ccc;
}

.dashboard-menu ul {
  list-style: none;
  margin: 0;
  padding: 0;
}

.dashboard-menu li {
  margin-bottom: 10px;
}

.dashboard-menu a {
  display: block;
  padding: 5px;
  color: #333;
  text-decoration: none;
}

.dashboard-menu a:hover {
  background-color: #ddd;
}

.dashboard-content {
  flex: 1;
  padding: 10px;
}

.dashboard-content h1 {
  font-size: 28px;
  margin-bottom: 20px;
}

.dashboard-content h2 {
  font-size: 20px;
  margin-bottom: 10px;
}

.dashboard-content form {
  margin-bottom: 20px;
}

.dashboard-content label {
  display: inline-block;
  width: 200px;
  font-weight: bold;
}

.dashboard-content input[type="file"] {
  margin-bottom: 10px;
}

.dashboard-content input[type="submit"] {
  background-color: #333;
  color: #fff;
  border: none;
  padding: 10px 20px;
  font-size: 16px;
  cursor: pointer;
}

.dashboard-content input[type="submit"]:hover {
  background-color: #555;
}

.dashboard-content input[type="password"] {
  padding: 5px;
  border: 1px solid #ccc;
  border-radius: 3px;
  width: 100%;
  margin-bottom: 10px;
}

.dashboard-content input[type="password"]:focus {
  outline: none;
  border-color: #555;
}

.dashboard-content p {
  font-size: 16px;
  margin-bottom: 20px;
}

.dashboard-content img {
  width: 100%;
  max-width: 200px;
  height: auto;
  margin-top: 20px;
}

    </style>
{% endblock %}

{% block body %}
{% include 'backandfront/Front/navbar.html.twig' %}
                     {% if message %}
    <message>{{ message }}</message>
    <a href="{{ path('app_2fa') }}">Cliquez ici pour l'activer</a>
{% endif %}

    <div class="dashboard">

        <div class="dashboard-menu">
            <ul>
                <li><a href="{{ path('freelancer_dashboard') }}">Home</a></li>
                <li><a href="#">Profile</a></li>
                <li><a href="{{ path('app_login') }}">Logout</a></li>
            </ul>
        </div>
        <div class="dashboard-content">
            <h1>User Settings</h1>
            <form action="{{ path('freelancer_update_image') }}" method="POST" enctype="multipart/form-data">
                <h2>Update Profile Picture</h2>
                <input type="file" name="image_file">
                <br><br>
                <input type="submit" value="Update">
            </form>
            <br><br>
            <form action="{{ path('freelancer_update_password') }}" method="POST">
                <h2>Change Password</h2>
                <label for="old_password">Old Password:</label>
                <input type="password" name="old_password" required>
                <br><br>
                <label for="new_password">New Password:</label>
                <input type="password" name="new_password" required>
                <br><br>
                <label for="confirm_new_password">Confirm New Password:</label>
                <input type="password" name="confirm_new_password" required>
                <br><br>
                <input type="submit" value="Change Password">
            </form>
        </div>
    </div>
        {% include 'backandfront/Front/footer.html.twig' %}
{% endblock %}
