{% extends 'base.html.twig' %}
{% block stylesheets %}
 <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
    {{ parent() }}
    <style>
        body {
             font-family: 'Montserrat', sans-serif;
            background: linear-gradient(to bottom, #00FFFF 0%, #FFFFFF 100%);
            background-repeat: no-repeat;
            background-attachment: fixed;
        }
        
        h1 {
            text-align: center;
        }
        
        form {
           background: linear-gradient(to bottom, #00FFFF 0%, #FFFFFF 100%);
            max-width: 400px;
            margin: 0 auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }
        
        label {
            font-weight: bold;
            display: block;
            margin-bottom: 5px;
        }
        
        input[type="email"],
        input[type="password"],
        input[type="text"] {
            display: block;
  width: 100%;
  max-width: 300px; /* Change the maximum width to your desired value */
  padding: 8px;
  font-size: 14px;
  border-radius: 5px;
  border: 1px solid #ccc;
  transition: border-color 0.2s;
        }
        
        input[type="email"]:focus,
        input[type="password"]:focus,
        input[type="text"]:focus {
            outline: none;
            border-color: #007bff;
        }
        
        .error {
            color: red;
            font-size: 14px;
            margin-bottom: 10px;
        }
        
        button[type="submit"] {
           display: block;
  width: 100%;
  max-width: 300px; /* Change the maximum width to your desired value */
  padding: 8px;
  margin-top: 20px;
  background-color: #007bff;
  color: #fff;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  transition: background-color 0.2s;
  font-size: 14px;
        }
        
        button[type="submit"]:hover {
            background-color: #0069d9;
        }
        
        a {
            display: block;
            margin-top: 20px;
            text-align: center;
            text-decoration: none;
            color: #007bff;
        }
        
        a:hover {
            text-decoration: underline;
        }
    </style>
{% endblock %}


{% block body %}
{% include 'backandfront/Front/navbar.html.twig' %}
    <h1>Connexion</h1>

    <form action="{{ path('app_login') }}" method="post" novalidate>
        <label for="email">Adresse email</label>
        <input type="email" id="email" name="_username" required>


        <br><label for="password">Mot de passe</label>
        <input type="password" id="password" name="_password" required>

        {% if errorMessage %}
            <div class="error">{{ errorMessage }}</div>
        {% endif %}

   <br> <label for="code">Authentication Code</label>
    <input type="text" id="code" name="code" required>

        <button type="submit">connexion</button>
         <a href="{{ path('app_forgot_password') }}">Mot de passe oubli√©</a>
    </form>
    

    {% block additional_links %}
        <a href="{{ path('user_registration') }}">S'inscrire en tant qu'utilisateur</a>
        <a href="{{ path('freelancer_registration') }}">S'inscrire en tant que freelancer</a>
    {% endblock %}
       {% include 'backandfront/Front/footer.html.twig' %}
{% endblock %}
