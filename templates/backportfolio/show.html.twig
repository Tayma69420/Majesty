{% extends 'base.html.twig' %}

{% block title %}Portfolio{% endblock %}

{% block body %}
{% include 'backandfront/NiceAdmin/navbar.html.twig' %}
    <div style="margin: 20px;">
        <h1 style="text-align: center; font-size: 36px;">Portfolio</h1>

        <table style="width: 100%; border-collapse: collapse; margin-top: 20px;">
            <tbody>
                <tr style="background-color: #f2f2f2;">
                    <th style="padding: 10px; border: 1px solid #ddd;">Idportfolio</th>
                    <td style="padding: 10px; border: 1px solid #ddd;">{{ portfolio.idportfolio }}</td>
                </tr>
                <tr>
                    <th style="padding: 10px; border: 1px solid #ddd;">Description</th>
                    <td style="padding: 10px; border: 1px solid #ddd;">{{ portfolio.description }}</td>
                </tr>
                <tr style="background-color: #f2f2f2;">
                    <th style="padding: 10px; border: 1px solid #ddd;">CV</th>
                    <td style="padding: 10px; border: 1px solid #ddd;">{{ portfolio.cv }}</td>
                </tr>
                <tr>
                    <th style="padding: 10px; border: 1px solid #ddd;">Image</th>
                    <td style="padding: 10px; border: 1px solid #ddd;"><img src="{{ asset('/images/' ~ portfolio.image) }}" width="100" height="100" alt="{{ portfolio.description }}"></td>
                </tr>
                <tr style="background-color: #f2f2f2;">
                    <th style="padding: 10px; border: 1px solid #ddd;">Iduser</th>
                    <td style="padding: 10px; border: 1px solid #ddd;">{{ portfolio.iduser }}</td>
                </tr>
                <tr>
    <th>Likes/Dislikes</th>
    <td class="likes">{{ portfolio.likes }}</td>
    <td class="dislikes">{{ portfolio.dislikes }}</td>
  </tr>
  <style>
table {
  border-collapse: collapse;
  width: 100%;
}

th, td {
  text-align: left;
  padding: 8px;
  border: 1px solid #ddd;
}

th {
  background-color: #f2f2f2;
  font-weight: bold;
}

td.likes {
  background-color: #d9ead3;
}

td.dislikes {
  background-color: #ffc7ce;
}
</style>
            </tbody>
        </table>

        <div style="margin-top: 20px;">
            <a href="{{ path('bapp_portfolio_index') }}" style="text-decoration: none; background-color: #007bff; color: #fff; padding: 10px 20px; border-radius: 4px;">Back to list</a>
            <a href="{{ path('bapp_portfolio_edit', {'idportfolio': portfolio.idportfolio}) }}" style="text-decoration: none; background-color: #28a745; color: #fff; padding: 10px 20px; border-radius: 4px; margin-left: 10px;">Edit</a>
            {{ include('portfolio/_delete_form.html.twig') }}
        </div>

       
    </div>
{% endblock %}
